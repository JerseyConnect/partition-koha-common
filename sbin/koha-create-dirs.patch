+createlink() {
+   local source="$1"
+   local dest="$2"
+
+   # Consolidate fragmented components
+   if [ ! -L $dest ] && [ -d $dest ] && [ -d $source ]
+   then
+       cp -Rp "$dest/"* "$source"
+       rm -rf $dest
+   fi
+   
+   # Create symbolic links to expected paths
+   if [ ! -L $dest ] && [ ! -d $dest ]
+   then
+       ln -s "$source" "$dest"
+   fi
+}
